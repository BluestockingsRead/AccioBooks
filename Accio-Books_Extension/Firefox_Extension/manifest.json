{
    "manifest_version": 2,
    "name": "Accio-Books Search",
    "version": "1.1.0",
    "description": "Easily search Accio-Books.com for highlighted book titles with a right-click.",
    "permissions": [
        "contextMenus",
        "activeTab"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "icons": {
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "acciobooks.com@gmail.com",
            "strict_min_version": "68.0"
        }
    }
}
