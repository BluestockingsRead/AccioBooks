{
    "manifest_version": 3,
    "name": "Accio-Books Search",
    "version": "1.1.0",
    "description": "Easily search Accio-Books.com for highlighted book titles with a right-click.",
    "permissions": [
        "contextMenus",
        "activeTab",
        "tabs",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "commands": {
        "search-accio-books": {
            "suggested_key": {
                "default": "Ctrl+Shift+Y",
                "mac": "Command+Shift+Y"
            },
            "description": "Search Accio Books for highlighted text"
        }
    },
    "icons": {
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
